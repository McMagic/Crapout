<?xml version="1.0" encoding="UTF-8" ?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>rules</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.RulesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>rules</servlet-name>
		<url-pattern>/rules</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>odds</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.OddsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>odds</servlet-name>
		<url-pattern>/odds</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>game</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.GameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>game</servlet-name>
		<url-pattern>/game</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>roll</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.RollServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>roll</servlet-name>
		<url-pattern>/roll</url-pattern>
	</servlet-mapping>

    <servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>


    <servlet>
		<servlet-name>signout</servlet-name>
		<servlet-class>net.rallyedu.Crapout.servlet.SignoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>signout</servlet-name>
		<url-pattern>/signout</url-pattern>
	</servlet-mapping>


    <filter>
        <filter-name>twitter</filter-name>
        <filter-class>net.rallyedu.Crapout.filter.TwitterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>twitter</filter-name>
        <url-pattern>/game</url-pattern>
    </filter-mapping>



</web-app>
